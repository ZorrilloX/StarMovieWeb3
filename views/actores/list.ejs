<%- include('../../components/header.ejs') %>
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card mt-3">
                <div class="card-body">
                    <div class="card-title">
                        <h3>Lista de Actores</h3>
                    </div>
                    <div class="mb-3">
                        <a class="btn btn-primary" href="/actores/create"> + Actor</a>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="table-dark">
                                <tr>
                                    <th></th>
                                    <th>ID</th>
                                    <th>Nombre</th>
                                    
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% actores.forEach(actor => { %>
                                    <tr>
                                        <td>
                                            <img src="/images/actores/<%= actor.id %>.jpg" class="card-img-top" 
                                                alt="<%= actor.nombre %>" 
                                                onerror="this.src='/images/persona.jpg'"
                                                style="height: 150px; width: auto;">        
                                        </td>
                                        <td><%= actor.id %></td>
                                        <td><%= actor.nombre %></td>
                                        
                                        

                                        <td>
                                            <a class="btn btn-warning" href="/actores/<%= actor.id %>/edit">Editar</a>
                                        </td>
                                        <td>
                                            <form method="post" action="/actores/<%= actor.id %>/delete" onsubmit="return confirm('¿Está seguro que desea eliminar?')">
                                                <input class="btn btn-danger" type="submit" value="Eliminar">
                                            </form>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../../components/footer.ejs') %>
