<%- include('../../components/header.ejs') %>
<div class="container">
    <div class="row">
        <div class="col-lg-6 col-md-8 col-sm-10 col-xxl-4">
            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title"><% if (actor) { %>Editar actor<% } else { %>Registrar actor<% } %></h5>
                    
                    <form method="post" action="<% if (actor) { %>
                        /actores/<%= actor.id %>/edit
                    <% } else { %>
                        /actores/create
                    <% } %>" enctype="multipart/form-data">
                        <div class="mt-2">
                            <label>Nombre del actor</label>
                            <input class="form-control" type="text" name="nombre" placeholder="Nombre del actor" 
                                value="<%= actor && actor.nombre %>">
                        </div>
                        <div class="mt-2">
                            <label>Cargar su Fotito</label>
                            <input class="form-control" type="file" name="imagen">
                        </div>
                        <div class="mt-2">
                            <input class="btn btn-primary" type="submit" value="Enviar">
                        </div>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../../components/footer.ejs') %>
